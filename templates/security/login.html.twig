{% extends 'base.html.twig' %}

{% block title %}Prijava u sustav{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/container40.css") }}">
{% endblock %}

{% block body %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Prijavljeni ste kao {{ app.user.username }},
                    <a href="{{ path('app_logout') }}">
                        Odjava
                    </a>
                </div>
            {% endif %}

            <h2 class="text-center p-3 bg-light">
                <b>
                    Prijava u sustav
                </b>
            </h2>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                   class="form-control" required autofocus>
            <label class="mt-3" for="inputPassword">Lozinka</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <div class="text-center">
                <button class="btn btn-success mt-3" type="submit">
                    Prijava
                </button>
            </div>
        </form>
    </div>
{% endblock %}

