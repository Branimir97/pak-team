{% extends 'base.html.twig' %}

{% block title %}Vozila u dolasku{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/incoming_vehicles.css") }}">
{% endblock %}

{% block body %}
    <div class="incoming-vehicles-wrapper"></div>
    <div class="container-fluid">
        <h1 class="text-center p-3" style="font-family: 'Big Shoulders Stencil Display', cursive;">Vozila u dolasku</h1>
        {% if not vehicles %}
            <div class="row">
                <div class="col-sm-4 text-center">
                    <div class="img-wrapper-incoming">
                        <img src="{{ asset("images/vozila_dolazak2.jpg") }}" alt="pak-team_vozila-u-dolasku2">
                    </div>
                </div>
                <div class="col-sm-4 mt-2">
                    <div class="box border border-success p-1">
                        <h6 class="text-center mt-3 p-3 bg-success text-white">
                            U svakom trenutku imamo od pet do deset automobila u dolasku.
                        </h6>
                        <h6 class="text-center bg-light p-3">
                            Ukoliko ste zainteresirani za određeni model vozila, informacije o narudžbi saznajte na
                            <a href="{{ path('ordering_vehicles') }}">poveznici</a>.
                        </h6>
                    </div>
                </div>
                <div class="col-sm-4 text-center mt-2">
                    <div class="img-wrapper-incoming">
                        <img src="{{ asset("images/vozila_dolazak1.jpg") }}" alt="pak-team_vozila-u-dolasku">
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row mt-3">
            {% for vehicle in vehicles %}
                <div class="col-sm-3 bg-light mb-3">
                    <div class="one_vehicle">
                        <div class="image-wrapper-main">
                            <img src="{{ asset("uploads/covers/")~vehicle.cover.imagePath }}" alt="">
                        </div>
                        <div class="title-block d-flex justify-content-center align-items-center">
                            <p class="p-2 m-0 text-center">
                                <b>
                                    {{ vehicle.mark }} {{ vehicle.model }}
                                </b>
                            </p>
                        </div>
                        <div class="row text-center">
                            <div class="col-sm-6">
                                <i class="fas fa-car"></i>
                                {{ vehicle.manufactureYear|date('Y') }}.
                            </div>
                            <div class="col-sm-6">
                                <i class="fas fa-road"></i>
                                {{ vehicle.kilometers|number_format('0', '.', '.') }} km
                            </div>
                        </div>
                        <p class="p-2 m-0">Status:
                            {% if vehicle.status == "In stock" %}
                                <span style="color: darkgreen">
                                    <b>
                                        {{ vehicle.status }}
                                        <i class="fas fa-check"></i>
                                    </b>
                                </span>
                            {% else %}
                                <span style="color: dodgerblue">
                                    <b>{{ vehicle.status }}
                                        <i class="fas fa-route"></i>
                                    </b>
                                </span>
                            {% endif %}
                        </p>
                        <a style="float: right" class="btn btn-success"
                           href="{{ path("vehicle_details", { id: vehicle.id}) }}">
                            Prikaži detalje
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}


