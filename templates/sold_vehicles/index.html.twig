{% extends 'base.html.twig' %}

{% block title %}Prodana vozila{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/sold_vehicles.css") }}">
{% endblock %}

{% block body %}
    <div class="sold-vehicles-wrapper"></div>
    <div class="container-fluid">
        <h2 class="text-center p-3 bg-light">
            <b>
                Prodana vozila
            </b>
        </h2>
        {% if vehicles.getTotalItemCount == 0 %}
            <h6 class="text-center mt-3 p-3 bg-info text-white">
                Lista prodanih vozila se a≈æurira.
            </h6>
        {% else %}
        <div class="count text-center">
            <p class="m-2">Ukupan broj prikazanih prodanih vozila: {{ vehicles.getTotalItemCount }}</p>
        </div>
        <div class="row mt-3 justify-content-center">
            {% for vehicle in vehicles %}
                <div class="col-sm-3 sold_vehicle-wrapper mb-3">
                    <img src="{{ asset('uploads/soldVehicles/')~vehicle.imagePath }}"
                         alt="{{ vehicle.title }}"
                        title="{{ vehicle.title }}">
                </div>
            {% endfor %}
        {% endif %}
        </div>
        <div class="text-center">
            {{ knp_pagination_render(vehicles) }}
        </div>
    </div>
{% endblock %}



